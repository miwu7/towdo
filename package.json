{
  "name": "towdo-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "TowDo desktop app built with React + Electron + Tailwind CSS.",
  "main": "electron/main.cjs",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"vite --host 127.0.0.1 --strictPort\" \"wait-on http-get://127.0.0.1:5173 && cross-env ELECTRON_RENDERER_URL=http://127.0.0.1:5173 electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "pack": "vite build && electron-builder --dir",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.484.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.towdo.desktop",
    "productName": "TowDo",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://towdo.oss-cn-hangzhou.aliyuncs.com/updates"
      }
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["universal"] },
        { "target": "zip", "arch": ["universal"] }
      ],
      "singleArchFiles": "LICENSE",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
